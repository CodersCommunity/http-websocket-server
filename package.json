{
  "name": "http-websocket-server",
  "version": "1.0.0",
  "description": "Serwer umożliwiający asynchroniczne wysyłanie danych do użytkowników forum.",
  "main": "dist/index.js",
  "scripts": {
    "prettier": "node_modules/.bin/prettier --write src/ test/",
    "dev": "nodemon src/index.js --exec babel-node",
    "debug": "node --inspect-brk dist/index.js",
    "prebuild": "npm run prettier && rimraf dist",
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "pretest": "npm run build",
    "test": "mocha --require babel-register --exit --timeout 5000"
  },
  "author": "Adrian Wieprzkowicz",
  "contributors": [
    {
      "name": "ScriptyChris"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "html-minifier": "^3.5.3",
    "jsdom": "^16.3.0",
    "nodemailer": "^6.4.16",
    "rimraf": "^3.0.2",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.3.2",
    "nodemon": "^1.11.0",
    "prettier": "^2.0.5"
  }
}
